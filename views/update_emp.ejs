<!-- include header -->
<%- include('partials/_header') %>
<!-- /include header -->

<!-- Main -->
<main id="site-main">
  <div class="container">
    <div class="box-nav d-flex justify-between">
      <div class="filter">
        <a href="/">
          <i class="fa fa-angle-double-left" aria-hidden="true"></i> All
          Employees</a
        >
      </div>
    </div>
    <div class="form-title text-center">
      <h2 class="text-dark">Update Employee</h2>
      <span class="text-light"
        >Update employee information using this form</span
      >
    </div>
    <!-- add employee form -->
    <!-- Form -->
    <form method="POST" id="update-employee">
      <div class="new-employee">
        <div class="form-group">
          <label for="name" class="text-light">Name</label>
          <input type="hidden" name="id" value="<%= employee._id%> " />
          <input type="text" name="name" value="<%= employee.name%>" />
        </div>
        <div class="form-group">
          <label for="job" class="text-light">Job Title</label>
          <input type="text" name="job" value="<%= employee.job%>" />
        </div>
        <div class="form-group">
          <label for="email" class="text-light">Email</label>
          <input type="text" name="email" value="<%= employee.email%>" />
        </div>
        <div class="form-group">
          <label for="status" class="text-light">Status</label>
          <div class="radio inline">
            <input type="radio" id="radio-btn" name="status" value="Active" <%=
            employee.status == "Active" ? 'checked': '' %> />
            <label for="radio-btn" class="radio-label">Active</label>
          </div>
          <div class="radio inline">
            <input type="radio" id="radio-btn2" name="status" value="Inactive"
            <%= employee.status == "Inactive" ? 'checked': ''%> />
            <label for="radio-btn2" class="radio-label">Inactive</label>
          </div>
        </div>
        <div class="form-group">
          <button type="submit" class="btn text-dark update">Submit</button>
        </div>
      </div>
    </form>
  </div>
</main>

<!-- include footer -->
<%- include('partials/_footer')%>
<!-- /include footer -->
